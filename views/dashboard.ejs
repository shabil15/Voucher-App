<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Voucher Dashboard</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 font-sans min-h-screen">
  <!-- Navbar -->
  <nav class="bg-gradient-to-r from-blue-600 to-indigo-500 text-white shadow-lg">
    <div class="container mx-auto px-4 py-4 flex justify-between items-center">
      <h1 class="text-3xl font-extrabold tracking-tight">Voucher Dashboard</h1>
      <a href="/logout" class="text-white bg-red-500 hover:bg-red-600 px-5 py-2 text-sm font-medium rounded-lg shadow-md">
        Logout
      </a>
    </div>
  </nav>

  <!-- Dashboard Content -->
  <div class="container mx-auto mt-8 px-4">
    <!-- Generate QR Code Section -->
    <div class="bg-white shadow-lg rounded-lg p-6 mb-8">
      <h2 class="text-2xl font-bold text-gray-800 mb-4">Generate a New Voucher</h2>
      <form action="/generate" method="POST" class="flex items-center gap-4">
        <button type="submit" class="bg-gradient-to-r from-blue-600 to-indigo-500 hover:from-blue-700 hover:to-indigo-600 text-white px-8 py-3 font-semibold rounded-lg shadow-md transition duration-300">
          Generate QR Code
        </button>
      </form>
    </div>

    <!-- Inside the Existing Vouchers List -->
<div class="bg-white shadow-md rounded-lg p-6">
    <h2 class="text-xl font-bold mb-4">Existing Vouchers</h2>
    <% if (vouchers.length > 0) { %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% vouchers.forEach((voucher) => { %>
          <div class="bg-gray-100 p-4 rounded-lg shadow-sm">
            <h3 class="font-semibold text-lg mb-2">Voucher Code: <%= voucher.code %></h3>
            <p class="text-sm text-gray-700 mb-2">Generated: <%= voucher.generatedDate.toDateString() %></p>
            <p class="text-sm text-gray-700 mb-4">Expiry: <%= voucher.expiryDate.toDateString() %></p>
            <div class="flex justify-center mb-4">
              <img src="<%= voucher.qrCode %>" alt="QR Code" class="w-32 h-32" />
            </div>
            <!-- Export PDF Button -->
            <div class="flex justify-center mt-4">
                <form action="/voucher/export/<%= voucher.id %>" method="GET">
                  <button type="submit" class="bg-green-600 hover:bg-green-700 text-white px-6 py-2 rounded-lg font-medium">
                    Export as PDF
                  </button>
                </form>
              </div>
          </div>
        <% }) %>
      </div>
    <% } else { %>
      <p class="text-gray-500">No vouchers available yet. Generate one to get started!</p>
    <% } %>
  </div>
  
  </div>
  <% if (typeof success !== "undefined" && success) { %>
    <script>
      Swal.fire({
        icon: 'success',
        title: 'Voucher Created!',
        text: 'A new voucher has been successfully generated.',
        confirmButtonColor: '#3085d6',
        confirmButtonText: 'Okay'
      });
    </script>
  <% } %>
</body>
</html>
