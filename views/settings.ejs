<!-- views/settings.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Settings</title>
  <script src="https://cdn.tailwindcss.com"></script> 
</head>
<body class="bg-gray-100 font-sans antialiased">

  <div class="max-w-4xl mx-auto p-8">
    <h1 class="text-3xl font-semibold text-gray-800 mb-6">Voucher Settings</h1>

    <form action="/settings" method="POST" class="bg-white p-6 rounded-lg shadow-lg space-y-6">

      
      <div>
        <label for="maxExpiryTime" class="block text-gray-700 text-lg font-medium">Maximum Expiry Time (minutes):</label>
        <input type="number" id="maxExpiryTime" name="maxExpiryTime" value="<%= settings.maxExpiryTime %>" 
          required class="mt-2 w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500" />
      </div>

      <!-- Voucher Width -->
      <div>
        <label for="voucherWidth" class="block text-gray-700 text-lg font-medium">Voucher Width (mm):</label>
        <input type="number" id="voucherWidth" name="voucherWidth" value="<%= settings.voucherWidth %>" 
          required class="mt-2 w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500" />
      </div>

      
      <div>
        <label for="voucherHeight" class="block text-gray-700 text-lg font-medium">Voucher Height (mm):</label>
        <input type="number" id="voucherHeight" name="voucherHeight" value="<%= settings.voucherHeight %>" 
          required class="mt-2 w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500" />
      </div>

     
      <div>
        <label for="titleFontSize" class="block text-gray-700 text-lg font-medium">Title Font Size (px):</label>
        <input type="number" id="titleFontSize" name="titleFontSize" value="<%= settings.titleFontSize %>" 
          required class="mt-2 w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500" />
      </div>

      <div>
        <label for="textFontSize" class="block text-gray-700 text-lg font-medium">Text Font Size (px):</label>
        <input type="number" id="textFontSize" name="textFontSize" value="<%= settings.textFontSize %>" 
          required class="mt-2 w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500" />
      </div>

      <div class="flex justify-end">
        <button type="submit" class="mt-4 bg-indigo-600 text-white font-semibold py-2 px-6 rounded-lg hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500">
          Save Settings
        </button>
      </div>

    </form>
  </div>

</body>
</html>
